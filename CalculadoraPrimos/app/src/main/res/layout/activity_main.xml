<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtInstruc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:text="@string/titulo"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtEnunciado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:lineSpacingExtra="4sp"
            android:text="@string/enunciado"
            android:textAlignment="center"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPosicion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:layout_marginTop="20dp"
                android:text="@string/posicion"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/cuadrotxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="42dp"
                android:height="48dp"
                android:backgroundTint="@color/azul"
                android:ems="10"
                android:inputType="number"
                android:minHeight="48dp"
                android:singleLine="false"
                android:textColorHighlight="@color/azul"
                android:textColorLink="@color/black"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <Button
            android:id="@+id/boton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:clickable="true"
            android:focusable="true"
            android:insetLeft="100dp"
            android:insetTop="10dp"
            android:insetRight="100dp"
            android:onClick="clic"
            android:text="@string/boton"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="50dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:textAlignment="center"
            android:textSize="20sp"
            app:autoSizeTextType="none" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>